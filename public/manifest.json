{
  "manifest_version": 3,
  "name": "kurukuruz demo extension",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "0.2.3",
  "description": "ページのハイパーリンクを取得してクリップボードにコピーする拡張機能",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "このページへのハイパーリンクをコピー",
    "default_icon": "icon16.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
